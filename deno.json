{
  "name": "@hyperpolymath/error-lang-playground",
  "version": "0.1.0",
  "exports": "./cli/main.js",
  "tasks": {
    "build": "deno task build:rescript && deno task build:cli",
    "build:rescript": "npx rescript",
    "build:cli": "deno check cli/main.js",
    "run": "deno run --allow-read --allow-write cli/main.js run",
    "repl": "deno run --allow-read --allow-write cli/main.js repl",
    "explain": "deno run cli/main.js explain",
    "doctor": "deno run --allow-env --allow-read cli/main.js doctor",
    "test": "deno test --allow-read tests/",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check cli/**/*.js"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/cli": "jsr:@std/cli@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  }
}
